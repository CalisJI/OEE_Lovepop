            Grid.Column="0">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries
                    StrokeThickness="2"
                    LineSmoothness="2"
                    Values="{Binding Values1}"
                    Fill="Transparent" />
            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>

        --><!--StepLine Chart--><!--
        <lvc:CartesianChart
            Margin="10"
            
            Grid.Row="0"
            Grid.Column="1">
            <lvc:CartesianChart.Series>
                <lvc:StepLineSeries Values="{Binding Values2}"/>
            </lvc:CartesianChart.Series>
        </lvc:CartesianChart>

        --><!--Pie Chart--><!--
        <lvc:PieChart
            LegendLocation="Right"
            Margin="10"
            Grid.Row="1"
            Grid.Column="0">
            <lvc:PieChart.Series>
                <lvc:PieSeries Values="{Binding Values3a}" Title="Series 1"/>
                <lvc:PieSeries Values="{Binding Values3b}" Title="Series 2"/>
